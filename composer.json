{
    "name": "gallu/slim-littie-tools",
    "description": "little tools for Slim Framework skeleton applications",
    "keywords": ["microframework", "rest", "psr7", "slim"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michiaki Furusho"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "slim/csrf": "^1.0",
        "slim/slim": "^4.0",
        "phpunit/phpunit": "^9.1",
        "slim/psr7": "^1.1",
        "php-di/php-di": "^6.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SlimLittleTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlimLittleTools\\Tests\\": "tests/"
        }
    }
}
